<Window x:Class="PartialScreensharerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartialScreensharerApp"
        mc:Ignorable="d"
        Top="0"
        WindowStyle="None"
        Left="0"
        WindowState="Normal"
        Title="PartialScreensharer App" 
        Height="450" 
        Width="800">
    <Grid>
        <Image Name="Image" Source="StartPic.png" Stretch="Fill"/>
        <StackPanel Name="WarningText">
            <TextBlock FontSize="22" Foreground="Red" Background="White" Margin="10" >UPDATES suspended because window is active</TextBlock>
            <TextBlock FontSize="22" Foreground="Black" Background="White" Margin="20" TextWrapping="Wrap" >
                Set this App Window to the area of what part of your screen you want to share. The app will make and display 
                a screenshot of that area and this screenshot will be presented in this app which is then shown to your
                audience in Teams, Skype or any similar program.
            </TextBlock>
            
            <Button FontSize="30" Content="Close App" Click="ButtonBase_OnClick" Margin="20" /> 

        </StackPanel>
    </Grid>
</Window>
